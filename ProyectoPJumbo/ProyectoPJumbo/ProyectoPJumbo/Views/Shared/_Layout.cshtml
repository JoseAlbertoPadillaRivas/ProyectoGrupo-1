@{
    var nombreUsuario = "Invitado";

    @if (Context.Session.GetString("Nombre") != null)
    {
        nombreUsuario = @Context.Session.GetString("Nombre");
    }
}


<!DOCTYPE html>
<html>

<head>
    
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="images/favicon.png" type="">

    <title> Pizzeria Jumbo </title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>



</head>

<body>

    <div class="hero_area">
        <div class="bg-box">
            <img src="~/images/pizzeria index.png" />
        </div>
        <!-- header section strats -->
        <header class="header_section bg-dark">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <span>
                            Pizzeria Jumbo
                        </span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav  mx-auto ">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","Home")">Inicio </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Menu","Menu")">Menu <span class="sr-only">(current)</span> </a>
                            </li>

                            @if (Context.Session.GetString("ConsecutivoRol") != null &&
                            @Context.Session.GetString("ConsecutivoRol") == "1")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("CrearPlato","Menu")">Añadir Plato <span class="sr-only">(current)</span> </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ConsultarUsuarios","Usuario")">Consultar Usuarios<span class="sr-only">(current)</span> </a>
                                </li>
                            }
                        </ul>
                        <div class="user_option">
                            @if (Context.Session.GetString("Nombre") != null)
                            {
                                <a href="@Url.Action("ActualizarPerfil","Usuario")"
                                   style="color: white; text-decoration: none;"
                                   class="d-flex align-items-center gap-2">
                                    MI PERFIL
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("IniciarSesion","Login")" class="user_link">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </a>
                            }
                            </a>
                            @if (Context.Session.GetString("ConsecutivoRol") == "3")
                            {
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" style="background: none; border: none;">
                                    <a href="@Url.Action("ConsultarCarrito","Carrito")">
                                        <i class="fa fa-cart-plus" aria-hidden="true" style="color: white;"></i>
                                    </a>
                                </button>
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit" style="background: none; border: none;">
                                    <a href="@Url.Action("ConsultarFacturas","Carrito")">
                                        <i class="fa fa-bookmark" aria-hidden="true" style="color: white;"></i>
                                    </a>
                                </button>
                            }
                            @if (Context.Session.GetString("Nombre") != null)
                            {
                                <a href="@Url.Action("CerrarSesion", "Login")"
                                   class="d-flex align-items-center justify-content-center"
                                   style="color: white; text-decoration: none;">
                                    <i class="fa fa-sign-out-alt" aria-hidden="true"></i>
                                </a>

                            }
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- end slider section -->
    </div>





    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Contáctenos
                        </h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Dirección
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Llamenos 6034-5378
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    pizzeriajumbo@gmail.com
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="" class="footer-logo">
                            Bienvenidos
                            <p>
                                Pizzeria Jumbo
                            </p>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <h4>
                        Abierto
                    </h4>
                    <p>
                        Todos los dias
                    </p>
                    <p>
                        10.00 Am -10.00 Pm
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- jQery -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"> </script>   
    
   
</body>
</html>