@model Usuario

@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-6 col-lg-5 col-xxl-4">
                    <div class="card border-0 shadow-lg" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h2 class="mb-3 text-dark fw-bold">Registrarse</h2>
                            </div>
                            <form asp-action="RegistroUsuarios" asp-controller="Login">
                                <div class="form-group mb-3">
                                    <label for="Cedula" class="form-label text-dark">Cedula</label>
                                    <input type="text" asp-for="Cedula" class="form-control shadow-sm p-3" id="Cedula" placeholder="Ingrese su Cedula" style="border-radius: 10px;">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="NombreUsuario" class="form-label text-dark">Nombre Completo</label>
                                    <input type="text" asp-for="NombreUsuario" class="form-control shadow-sm p-3" id="NombreUsuario" placeholder="Nombre completo" style="border-radius: 10px;">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="Correo" class="form-label text-dark">Email</label>
                                    <input type="email" asp-for="Correo" class="form-control shadow-sm p-3" id="Correo" placeholder="Ingrese su Correo" style="border-radius: 10px;">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="password" class="form-label text-dark">Contraseña</label>
                                    <input type="password" asp-for="Contrasenna" class="form-control shadow-sm p-3" id="Contraseña" placeholder="Ingrese su Contraseña" style="border-radius: 10px;">
                                </div>

                                <input type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4" value="Procesar">

                                <div class="d-flex align-items-center justify-content-center">
                                    <p class="fs-4 mb-0 fw-bold">Ya tienes una cuenta?</p>
                                    <a class="text-primary fw-bold ms-2" href="@Url.Action("IniciarSesion","Login")">Inicia Sesión</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


