@model Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg);">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-6 col-lg-5 col-xxl-4">
                    <div class="card border-0 shadow-lg" style="border-radius: 20px; background: #ffffff;">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h2 class="mb-3 text-primary fw-bold" style="font-family: 'Poppins', sans-serif;">Registrarse</h2>
                                <p class="text-muted">Crea una cuenta para acceder a todas las funcionalidades</p>
                            </div>
                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
                            }
                            <form asp-action="RegistroUsuarios" asp-controller="Login">
                                <div class="form-group mb-4">
                                    <label for="Cedula" class="form-label text-dark fw-bold">Cédula</label>
                                    <input type="text" asp-for="Cedula" class="form-control shadow-sm p-3" id="Cedula" placeholder="Ingrese su cédula" style="border-radius: 10px;" onkeyup="ConsultarNombre();">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="NombreUsuario" class="form-label text-dark fw-bold">Nombre Completo</label>
                                    <input type="text" asp-for="NombreUsuario" class="form-control shadow-sm p-3" id="NombreUsuario" placeholder="Nombre completo" style="border-radius: 10px;" readonly="readonly">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="Correo" class="form-label text-dark fw-bold">Email</label>
                                    <input type="email" asp-for="Correo" class="form-control shadow-sm p-3" id="Correo" placeholder="Ingrese su correo" style="border-radius: 10px;">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="password" class="form-label text-dark fw-bold">Contraseña</label>
                                    <input type="password" asp-for="Contrasenna" class="form-control shadow-sm p-3" id="Contraseña" placeholder="Ingrese su contraseña" style="border-radius: 10px;">
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2 fs-5 fw-bold" style="border-radius: 15px; background: #1976d2; border: none; font-family: 'Poppins', sans-serif;">Crear Cuenta</button>

                                <div class="d-flex align-items-center justify-content-center mt-4">
                                    <p class="fs-5 mb-0 text-muted fw-bold">¿Ya tienes una cuenta?</p>
                                    <a class="text-primary fw-bold ms-2" href="@Url.Action("IniciarSesion","Login")" style="text-decoration: none;">Inicia Sesión</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Funciones.js"></script>