@model Empleado

@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="fw-semibold mb-0">Actualizar Empleado</h4>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
                    }

                    <form asp-action="ActualizarEmpleado" asp-controller="Usuario">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Identificación</label>
                            <input type="text" asp-for="Identificacion" class="form-control"
                                   onkeyup="ConsultarNombre();" placeholder="Ingrese la identificación">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre</label>
                            <input type="text" asp-for="Nombre" class="form-control" readonly
                                   style="background-color: #f8f9fa;" placeholder="Nombre del empleado">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Correo Electrónico</label>
                            <input type="email" asp-for="CorreoEmpleado" class="form-control"
                                   placeholder="ejemplo@correo.com">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Rol Sistema</label>
                            <input type="text" asp-for="NombreRol" class="form-control" readonly
                                   style="background-color: #f8f9fa;" placeholder="Rol del sistema">
                        </div>

                        <div class="text-center">
                            <input type="submit" class="btn btn-primary btn-lg w-100" value="Actualizar">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
