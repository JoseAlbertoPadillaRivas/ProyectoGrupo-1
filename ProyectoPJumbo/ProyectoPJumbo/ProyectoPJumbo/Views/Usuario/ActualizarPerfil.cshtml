@model Usuario

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center" style="background-color: #f8f9fa; border-bottom: 2px solid #ddd;">
                    <h4 class="fw-semibold mb-0" style="color: #333;">Actualizar Perfil</h4>
                </div>
                <div class="card-body p-5">
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
                    }

                    <form asp-action="ActualizarPerfil" asp-controller="Usuario">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Identificación</label>
                            <input type="text" asp-for="Cedula" class="form-control"
                                   placeholder="Ingrese su identificación">
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Nombre</label>
                            <input type="text" asp-for="NombreUsuario" class="form-control"
                                   style="background-color: #f1f1f1;" placeholder="Nombre completo" readonly>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Correo Electrónico</label>
                            <input type="email" asp-for="Correo" class="form-control"
                                   placeholder="ejemplo@correo.com">
                        </div>

                        <div class="text-center">
                            <input type="submit" class="btn btn-dark btn-lg w-100" value="Actualizar Perfil"
                                   style="background-color: #1976d2; color: #fff; border-radius: 8px; border: none;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

